<h1>Вход</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :nikname, "Введите ваш ник" %>
      <%= f.text_field :nikname %>

      <%= f.label :password, "Введите ваш пароль" %>
      <%= f.password_field :password %>

      <%= f.submit "Войти", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Впервые у нас? <%= link_to "Зарегистрируйтесь!", signup_path %></p>
  </div>
</div>